<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            tools:context=".AddActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!-- covers the entire width of the screen -->
            android:layout_width="match_parent"

            <!-- covers as much height as required. -->
            android:layout_height="wrap_content"

            android:text="Painting"
            android:layout_marginTop="16dp"
            android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkbox"
                android:text="Whatsapp number is same as Phone Number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et1"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNumber" />

            <Button
                android:id="@+id/b2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:background="@color/fostergreen"
                android:onClick="save"
                android:text="Save"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/et2"
                app:layout_constraintEnd_toStartOf="@+id/b2"
                app:layout_constraintTop_toBottomOf="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:ems="10"
                android:hint="No. of Members"
                android:inputType="textPersonName"
                android:text="" />


            <EditText
                android:id="@+id/et1"
                app:layout_constraintEnd_toStartOf="@+id/et2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name of The Family / Person"
                android:inputType="textPersonName"
                android:text="" />

            <Button
                android:id="@+id/btnPickContact"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFA500"
                android:onClick="pickContact"
                android:text="Pick Contact"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et2" />

            <TextView
                android:id="@+id/tvContactNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:textColor="@color/red"
                android:background="@color/silver"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="" />

            <EditText
                android:id="@+id/code1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPickContact"
                android:layout_width="157dp"
                android:layout_height="61dp"
                android:ems="2"
                android:hint="Add Country Code"
                android:inputType="textPersonName"
                android:text="" />

            <Button
                android:id="@+id/btnPickWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:background="#4ac959"
                android:onClick="pickWhatsapp"
                android:text="PICK WHATSAPP CONTACT"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/code1" />

            <EditText
                android:id="@+id/code2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPickWhatsapp"
                android:layout_width="157dp"
                android:layout_height="61dp"
                android:ems="2"
                android:hint="Add Country Code"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/tvWhatsappNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/code2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2sp"
                android:textColor="@color/red"
                android:background="@color/silver"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>


