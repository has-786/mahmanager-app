<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple"
    app:cardBackgroundColor="@color/skyblue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/purple">

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toEndOf="@+id/t2"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="12.5dp"
                app:layout_constraintStart_toEndOf="@+id/t2"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/dec"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/t2"
                    app:layout_constraintStart_toEndOf="@+id/count"
                    app:srcCompat="@drawable/ic_indeterminate_check_box_black_24dp" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/fostergreen"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toStartOf="@+id/t2"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/inc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/t2"
                app:layout_constraintEnd_toStartOf="@+id/t2"
                app:layout_constraintHorizontal_bias="0.68"
                app:layout_constraintStart_toEndOf="@+id/count"
                app:srcCompat="@drawable/ic_add_circle_black_24dp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/dbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:alpha="1"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/t1" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="Total Members"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/t2"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="1"
            android:background="@color/skyblue"
            app:cardBackgroundColor="@color/skyblue"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="@+id/t1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:alpha="1"
                android:background="@color/skyblue"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/phoneNo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t2" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFA500"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:padding="5sp"
            android:text="Call Now"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t2" />

        <TextView
            android:id="@+id/whatsappNo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="48dp"
            android:background="@color/purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t2" />

        <TextView
            android:id="@+id/whatsapp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#4ac959"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:padding="5sp"
            android:text="WhatsApp Now"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t2" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="Urdu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t1" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b1"
            style="@android:style/Widget.Holo.ActionBar.TabText"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/red"
            android:padding="2dp"
            android:text="Delete"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
